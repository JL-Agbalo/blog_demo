<h1 class="text-center"><%= pluralize(1, "Result") %></h1>
<p>Find me in app/views/search/index.html.erb</p>

<%= render 'search/form'%>

<div class="container" >
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th><%= sort_link(@query, :title, "Title", default_order: :asc) %></th>
      <th><%= sort_link(@query, :body, "Blog Content") %></th>
      <th><%= sort_link(@query, :user_name, "Users") %></th>
    </tr>
  </thead>
  <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post %></td>
          <td><%= post.body.truncate_words(25) %></td>
          <td><%= link_to post.user.name, post.user %></td>
        </tr>
        <% end %>
  </tbody>
</table>

</div>